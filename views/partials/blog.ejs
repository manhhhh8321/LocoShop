<div class="blogs">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title">
                    <h2>Latest Blogs</h2>
                </div>
            </div>
        </div>
        <div class="row blogs_container">
            <% for( let index = 0; index < 4; index++ ) { %>
                <div class="col-lg-4 blog_item_col">
                    <div class="blog_item">
                        <div class="blog_background" style="background-image:url(images/<%=blog[index].image%>.jpg)"></div>
                        <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                            <h4 class="blog_title"><%= blog[index].title %> </h4>
                            <span class="blog_meta">by <%= blog[index].author %>  | <%= blog[index].createdAt %> </span>
                            <a class="blog_more" href="#">Read more</a>
                        </div>
                    </div>
                </div>
            <% } %>
            
            
        </div>
    </div>
</div>